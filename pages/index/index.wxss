/**index.wxss**/

.container {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: auto;
  background-color: #79000d;
}

/* userinfo s */

.userinfo {
  width: 100%;
  background: url('http://36.7.138.114:124/app/2016/dist/images/top-banner.png') no-repeat;
  background-size: 100% 415rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 96rpx;
  margin-left: -10rpx;
  border-radius: 50%;
}

.userinfo-rank {
  font-size: 22rpx;
  color: #f3ca6c;
}

.userinfo-nickname {
  margin: 10rpx 0;
  font-size: 38rpx;
  color: #f3ca6c;
}

.userinfo-fragment, .userinfo-points {
  font-size: 28rpx;
  color: #f3ca6c;
}

.userinfo-fragment {
  margin-right: 18px;
}

.userinfo-view {
  text-align: center;
}

.fragment-points-con {
  display: flex;
  justify-content: center;
}

.usermotto {
  margin-top: 200px;
}

.top-banner {
  position: absolute;
  width: 100%;
  bottom: 0;
}

/* e */

/* 导航dashboard s*/

.dashboard {
  width: 613rpx;
  height: 390rpx;
}

.dashboard-position {
  position: absolute;
  width: 613rpx;
   top: 24%; 
  z-index: 2;
  left: 50%;
  transform: translate(-50%);
}

.dashboard-container {
  width: 21%;
  height: 200rpx;
  margin: 0 2%;
  float: left;
}

.nav-container {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}

.nav-img {
  width: 100%;
  height: 100%;
}

.nav-explain {
  position: absolute;
  display: block;
  width: 100%;
  bottom: 0rpx;
  text-align: center;
  font-size: 24rpx;
  color: #f3ca6c;
}

