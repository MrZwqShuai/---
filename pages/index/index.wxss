/* 兑换css s*/

.exchange-banner {
  width: 610rpx;
  margin-top: 10rpx;
}

.exchange-mg {
  width: 100%;
}

.exchange-content {
  position: relative;
  width: 720rpx;
  height: 300rpx;
}

.exchange-img {
  width: 100%;
}

.exchange-child-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.exchange-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 20%;
  height: 100%;
  margin-left: 25.5rpx;
  margin-left: 3.5%;
  float: left;
}

.exchange-child-img {
  width: 160rpx;
  height: 90rpx;
}

.exchange-child-explain {
  width: 160rpx;
  height: 40rpx;
  font-size: 22rpx;
  margin-bottom: 52rpx;
}

