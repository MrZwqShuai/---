/* pages/news/news.wxss */

.news-container {
  width: 100%;
  height: 100%;
  background-color: #79000d;
}

.mail {
  width: 100%;
  height: 190rpx;
  margin: 3rpx 0;
}

.mail-scroll {
  display: flex;
  white-space: nowrap;
  width: 100%;
}

.main-body {
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 190rpx;
  float: left;
  background: #79000d;
  border-bottom: 1px solid #f9c58c;
  font-size: 24rpx;
  color: #fff;
}
.main-body .avator {
  margin-left: 25rpx;
}
.delete-btn{
  width: 180rpx;
  height: 195rpx;
  display: inline-block;
  text-align: center;
  line-height: 195rpx;
  font-size: 34rpx;
  background-color: #d8b75c;
}
.avator{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.news-content{
  width: 420rpx;
  margin-left: 35rpx;
  /* overflow: hidden; */
}
.news-content .title{
  font-size: 38rpx;
}
.new-details{
  display: flex;
  margin-bottom: 18rpx;
  justify-content: space-between;
}
.matter{
    display: -webkit-box;
    font-size:28rpx;
    color:#fff;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
}
.date{
  font-size: 26rpx;
}